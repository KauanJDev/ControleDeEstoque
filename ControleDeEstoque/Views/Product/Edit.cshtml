@using ControleDeEstoque.Models
@model ProductsModel
@{
    ViewData["Title"] = "EditProduct";
}

<h1 class="text-center">Edit Product</h1>

<form asp-action="Edit" asp-controller="Product" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Nome do Produto</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label">Preço</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label">Quantidade</label>
        <input asp-for="Quantity" class="form-control" type="number" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Adicionar Produto</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}