@using ControleDeEstoque.Models
@model UsersModel
@{
	ViewData["Title"] = "Login";
}


@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h1 class="text-center">
    Login
</h1>
<form asp-action="Login" asp-controller="Login" method="post">
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="email">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input type="password" asp-for="Password" class="form-control" id="password">
    </div>
    <div>
        <span class="text-muted">Don't have an account? <a asp-action="Register" asp-controller="Login">Register</a></span>
    </div>
    <div>
        <span class="text-muted"> Forgot your password? <a asp-action="ResetPassword" asp-controller="Login">Reset Password</a></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
