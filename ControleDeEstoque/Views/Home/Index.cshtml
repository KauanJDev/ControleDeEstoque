@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<canvas id="graficoVendas"></canvas>

@section Scripts {
    <script>
        var dados = @Html.Raw(ViewBag.DadosJson);

        var ctx = document.getElementById("graficoVendas").getContext("2d");

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: dados.map(x => x.Name),
                datasets: [{
                    label: 'Quantidade Vendida',
                    data: dados.map(x => x.Quantity),
                    backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(153, 102, 255, 0.5)',
                    'rgba(255, 159, 64, 0.5)'
                ],
                    borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                    borderWidth: 1
                }]
            }
        });
    </script>
}
